<div class="points index">
  <h2>Subjects</h2>
  <table class="listing" summary="Subject list">
    <tr class="header" style="color:black">
      <th>User</th>
      <th>Events</th>
      <th>Points</th>
    </tr>
    <% @points.each do |point| %>
    <tr>
      <td><%= point.userID %></td>
      <td><%= point.events %></td>
      <td><%= point.points %></td>
    </tr>
    <% end %>
  </table>
  <%= link_to("Add New Page", new_point_path, :class => 'action new') %>
</div>
