<div class="points index">
  <!DOCTYPE>
  <html>

      <%= stylesheet_link_tag "stylesPoints.css" %>

      <body class="background">

      <!-- had to put the buttons in a table because the ruby inserts are being dum and put the buttons on a new line -->
          <table>
              <tr>
                  <td>
                      <%= button_to "Add points", new_point_path, :class => 'button action new', :method => 'get' %>
                  </td>
                  <td>
                      <center> <%= button_to "View all points", points_path, :class => 'button', :method => 'get' %> </center>
                  </td>
                  <td>
                      <div align="right"><%= button_to "Logout", "/logout", :class => 'button', :method => :get %></div>
                  </td>
              </tr>
          </table>

          <div class="points_area">
              <h2 class="header">These are your points</h2>
              <div>
                  <table>
                      <!-- Table header -->
                      <tr>
                          <th>Event</th>
                          <th>Type</th>
                          <th>Points</th>
                          <th>Date</th>
                          <th>Actions</th>
                      </tr>

                      <!-- test rows to see style -->
                      <% @points.each do |point| %>
                        <tr>
                            <td><%= point.eventName %></td>
                            <td><%= point.eventType %></td>
                            <td><%= point.pointAmount %></td>
                            <td><%= point.submissionDate %></td>
                            <td>
                                <%= link_to('Edit', url_for(controller: :points, action: :edit, id: point.id), :confirm =>  "Are you sure?")%>
                                <%= link_to('Delete', url_for(controller: :points, action: :delete, id: point.id), :confirm =>  "Are you sure?")%>
                            </td>
                        </tr>
                      <% end %>

                  </table>

                  <!-- maybe add total business and speaking at the bottom of the table?? Will probably do later. Prabably gotta make two variables that update after every iteration of the loop-->
                  <!-- < @totalSpeaking = 0 > -->
                  <!-- < @totalBusiness = 0 > -->

                  <div>
                  <!-- This is a template for inserting into the table. Just replace this in the test row area.
                  Gotta fix the ruby inserts
                  < @points.each do |point| > 
                          <tr> 
                              <td> <= point.id > </td> 
                              <td> <= point.event > </td> 
                              <td> <= point.type > </td> 
                              <td> <= point.points > </td> 
                              <td> <= point.date > </td> 
                          </tr> -->
                  </div>

              </div>
          </div>
          <div class="points_area">
              <h2 class="header">Total points</h2>
              <div>
                  <table>
                      <!-- Table header -->
                      <tr>
                          <th>Event Type</th>
                          <th>Points</th>
                          <%# <th>Date</th> %>
                      </tr>
                      <tr>
                        <td>Speaking Event</td>
                        <td><%=@speaking_sum%></td>
                      </tr>
                      <tr>
                        <td>Business Event</td>
                        <td><%=@business_sum%></td>
                      </tr>
                  </table>
              </div>
          </div>
      </body>

  </html>

</div>