<!DOCTYPE HTML PUBLIC>

<html>

    <%= stylesheet_link_tag "stylesLogin.css" %>

    <body class="background">
    
        <div class="picture"><img src="assets/tradcoLogo.png" class="logo"></img></div>
        

        <div class="wholeLogin">
            <%# will need to change to point_path, once we have an ID of the user to point to%>
            <%= form_tag "/login" do %>
            <div class="login">

                <div class="loginText">
                    <h3>Log in</h3>
                </div>

                <table>
                    <tr>
                        <td>Email</td>
                        <td style="text-align:right"> <%= text_field_tag :email %></td>
                    </tr>
                    <tr></tr>
                    <tr>
                        <td>Password</td>
                        <td style="text-align:right"> <%= password_field_tag :password %></td>
                    </tr>
                </table>

                <p></p>

                <center><%= submit_tag "Login" , class: "button" %></center>
                <% end %>
                <center><%= button_to "Sign up", new_user_path, :class => 'button', :method => :get %></center>

            </div>
            <% if @failed == true%>
                <div class="notice" id="notice">
                    <div class="dim"></div>
                    <div class="center">
                        <h1>Error</h1>
                        <br>
                        <p>The username or password you entered is incorrect. Please try again.</p> 
                        <table>
                            <tr>
                                <td><center><button class="close" id="close" onclick=cancelNotice()> Retry </button></center></td>
                            </tr>
                        </table>
                    </div>
                </div>
                <% session["FAILED"] = false%>
                <% @failed = false%>
            <% end %>
        </div>
        <script>
        /* Delete notice */
            function notice() {
                document.getElementById("notice").style.display="none";
            }
            function cancelNotice() {
                document.getElementById("notice").style.display="none";
            }
        </script>
    </body>

</html>
